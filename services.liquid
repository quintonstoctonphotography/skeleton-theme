{% comment %}
  SERVICES PAGE TEMPLATE
  Shopify Liquid template for services page
  Displays all available services with pricing
{% endcomment %}

<!-- Hero Section -->
<section class="services-hero" data-section-id="{{ section.id }}" data-section-type="services-hero">
  <div class="services-hero__inner">
    <h1 class="services-hero__title">
      <span class="services-hero__text--primary">Professional</span> 
      <span class="services-hero__text--accent">Services</span>
    </h1>
    <p class="services-hero__subtitle">Professional photography, branding, and digital design services tailored to your unique story.</p>
  </div>
</section>

<!-- Services Grid -->
<section class="services-grid" data-section-id="{{ section.id }}" data-section-type="services-grid">
  <div class="services-grid__inner">
    <!-- Wedding Photography -->
    <div class="service-card" data-service="wedding">
      <div class="service-card__image">
        <i class="fas fa-ring" aria-hidden="true"></i>
      </div>
      <div class="service-card__content">
        <h3 class="service-card__title">Wedding Photography</h3>
        <p class="service-card__description">
          Full-day coverage capturing your entire wedding story. Includes 300+ edited photos, sneak peek gallery, and highlight slideshow.
        </p>
        <div class="service-card__pricing">
          <span class="service-card__price">$1,750</span>
          <span class="service-card__rate">$225/hr</span>
        </div>
        <a href="https://quintonstoctonphotography.com/products/wedding-photography" target="_blank" rel="noopener" class="button button--primary">View Details</a>
      </div>
    </div>

    <!-- Lifestyle/Portrait Photography -->
    <div class="service-card" data-service="portrait">
      <div class="service-card__image">
        <i class="fas fa-camera" aria-hidden="true"></i>
      </div>
      <div class="service-card__content">
        <h3 class="service-card__title">Lifestyle/Portrait Photography</h3>
        <p class="service-card__description">
          Capturing individuals, families, and headshots for professional or personal use. 1-2 hours coverage with 20+ edited images.
        </p>
        <div class="service-card__pricing">
          <span class="service-card__price">$250</span>
          <span class="service-card__rate">$125/hr</span>
        </div>
        <a href="https://quintonstoctonphotography.com/products/portrait-lifestyle-photography" target="_blank" rel="noopener" class="button button--primary">View Details</a>
