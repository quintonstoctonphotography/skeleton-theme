</section>

<!-- CTA Section -->
<section class="services-cta" data-section-id="{{ section.id }}" data-section-type="services-cta">
  <div class="services-cta__inner">
    <h2 class="services-cta__title">Ready to get started?</h2>
    <p class="services-cta__description">Contact me today to discuss your project and get a custom quote.</p>
    <a href="/pages/contact" class="button button--primary button--large">Get In Touch</a>
  </div>
</section>

<style>
  .services-hero {
    margin-top: 80px;
    padding: 5rem 2rem 3rem;
    text-align: center;
    background: radial-gradient(ellipse at center, var(--color-base-primary) 0%, var(--color-base-background) 70%);
    min-height: 350px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .services-hero__inner {
    max-width: 900px;
  }

  .services-hero__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
  }

  .services-hero__text--accent {
    color: var(--color-base-primary);
  }

  .services-hero__subtitle {
    font-size: 1.2rem;
    color: #E5E0E0;
  }

  .services-grid {
    padding: 5rem 2rem;
    background: #000;
  }

  .services-grid__inner {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: #1a1a1a;
    border: 2px solid var(--color-base-primary);
    border-radius: 10px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    transition: all 0.3s;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(186, 6, 6, 0.4);
  }

  .service-card__image {
    font-size: 3rem;
    color: var(--color-base-primary);
    margin-bottom: 1.5rem;
  }

  .service-card__title {
    font-size: 1.3rem;
    color: #fff;
    margin-bottom: 1rem;
  }

  .service-card__description {
    font-size: 0.95rem;
    color: #E5E0E0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .service-card__pricing {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .service-card__price {
    font-size: 1.5rem;
    color: var(--color-base-primary);
    font-weight: 700;
  }

  .service-card__rate {
    font-size: 0.9rem;
    color: #E5E0E0;
  }

  .services-cta {
    padding: 5rem 2rem;
    text-align: center;
    background: #0a0a0a;
  }

  .services-cta__inner {
    max-width: 900px;
    margin: 0 auto;
  }

  .services-cta__title {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: 1rem;
  }

  .services-cta__description {
    font-size: 1.1rem;
    color: #E5E0E0;
    margin-bottom: 2rem;
  }

  .button {
    display: inline-block;
    padding: 0.8rem 1.8rem;
    background: var(--color-base-primary);
    color: #fff;
    border: 2px solid var(--color-base-primary);
    border-radius: 5px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s;
    cursor: pointer;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .button:hover {
    background: #8B0000;
    border-color: #8B0000;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(186, 6, 6, 0.4);
  }

  .button--large {
    padding: 1.2rem 3rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .services-hero {
      margin-top: 60px;
      padding: 3rem 1.5rem;
      min-height: 250px;
    }

    .services-hero__title {
      font-size: 2rem;
    }

    .services-grid {
      padding: 3rem 1.5rem;
    }

    .services-grid__inner {
      grid-template-columns: 1fr;
    }

    .services-cta {
      padding: 3rem 1.5rem;
    }

    .services-cta__title {
      font-size: 1.75rem;
    }

    .button {
      width: 100%;
    }
  }
</style>
