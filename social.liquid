<style>
  .social-hero {
    margin-top: 80px;
    padding: 5rem 2rem 3rem;
    text-align: center;
    background: radial-gradient(ellipse at center, var(--color-base-primary) 0%, var(--color-base-background) 70%);
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-hero__inner {
    max-width: 900px;
  }

  .social-hero__title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
  }

  .social-hero__text--accent {
    color: var(--color-base-primary);
  }

  .social-hero__bio {
    font-size: 1.1rem;
    color: #E5E0E0;
    line-height: 1.6;
    margin: 0;
  }

  .social-links {
    padding: 5rem 2rem;
    background: #000;
  }

  .social-links__inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    list-style: none;
  }

  .social-link-card {
    background: #1a1a1a;
    border: 2px solid var(--color-base-primary);
    border-radius: 10px;
    padding: 2rem;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: all 0.3s;
  }

  .social-link-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(186, 6, 6, 0.3);
  }

  .social-link-card__icon {
    font-size: 3rem;
    color: var(--color-base-primary);
    flex-shrink: 0;
  }

  .social-link-card__title {
    font-size: 1.4rem;
    color: #fff;
    margin: 0 0 0.5rem;
  }

  .social-link-card__handle {
    color: #E5E0E0;
    font-size: 0.95rem;
    margin: 0;
  }

  .quick-links-section {
    padding: 5rem 2rem;
    background: #0a0a0a;
  }

  .quick-links-section__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .quick-links-section__title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #fff;
  }

  .quick-links-section__text--accent {
    color: var(--color-base-primary);
  }

  .quick-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    list-style: none;
  }

  .quick-link-card {
    background: #1a1a1a;
    border: 2px solid var(--color-base-border);
    border-radius: 10px;
    padding: 2rem;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s;
  }

  .quick-link-card:hover {
    border-color: var(--color-base-primary);
    transform: translateY(-8px);
    box-shadow: 0 10px 25px rgba(186, 6, 6, 0.2);
  }

  .quick-link-card__icon {
    font-size: 2.5rem;
    color: var(--color-base-primary);
    margin-bottom: 1rem;
  }

  .quick-link-card__title {
    font-size: 1.3rem;
    color: #fff;
    margin: 0 0 0.5rem;
  }

  .quick-link-card__description {
    color: #E5E0E0;
    font-size: 0.95rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .social-hero {
      margin-top: 60px;
      padding: 3rem 1.5rem;
      min-height: 250px;
    }

    .social-hero__title {
      font-size: 1.75rem;
    }

    .social-links {
      padding: 3rem 1.5rem;
    }

    .social-links__inner {
      grid-template-columns: 1fr;
    }

    .quick-links-section {
      padding: 3rem 1.5rem;
    }

    .quick-links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
