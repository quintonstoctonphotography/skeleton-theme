{% comment %}
  ABOUT PAGE TEMPLATE
  Shopify Liquid template for about page
  Displays company story and values
{% endcomment %}

<!-- Hero Section -->
<section class="about-hero" data-section-id="{{ section.id }}" data-section-type="about-hero">
  <div class="about-hero__inner">
    <h1 class="about-hero__title">
      <span class="about-hero__text--primary">About</span> 
      <span class="about-hero__text--accent">Quinton Stocton</span>
    </h1>
    <p class="about-hero__subtitle">Capturing moments that matter, creating designs that define you</p>
  </div>
</section>

<!-- Story Section -->
<section class="about-story" data-section-id="{{ section.id }}" data-section-type="about-story">
  <div class="about-story__inner">
    <div class="about-story__content">
      <h2 class="about-story__heading">My Journey</h2>
      <p class="about-story__text">
        I'm Quinton Stocton, a full-stack creative based in Glasgow, Kentucky. For over six years, I've been helping people and businesses tell their stories through photography, branding, and digital design.
      </p>
      <p class="about-story__text">
        What started as a passion for capturing moments has evolved into a comprehensive creative practice. Today, I work with clients across the spectrumâ€”from intimate personal portraits to complete brand identities for growing businesses.
      </p>
      <p class="about-story__text">
        Every project I undertake is guided by one core belief: the power of a single image or design to transform the way someone feels about themselves or their brand. It's this belief that drives everything I do.
      </p>
    </div>

    <div class="about-story__values">
      <h2 class="about-story__heading">What I Value</h2>
      <div class="values-grid">
        <div class="value-card">
          <div class="value-card__icon">
            <i class="fas fa-heart" aria-hidden="true"></i>
          </div>
          <h3 class="value-card__title">Authenticity</h3>
          <p class="value-card__description">I believe in capturing genuine emotion and creating real connections through your visual story.</p>
        </div>

        <div class="value-card">
          <div class="value-card__icon">
            <i class="fas fa-star" aria-hidden="true"></i>
          </div>
          <h3 class="value-card__title">Excellence</h3>
          <p class="value-card__description">Every detail matters. I bring luxury-quality results with meticulous attention to your vision.</p>
        </div>

        <div class="value-card">
          <div class="value-card__icon">
            <i class="fas fa-users" aria-hidden="true"></i>
          </div>
          <h3 class="value-card__title">Community</h3>
          <p class="value-card__description">Success means more when shared. I support local initiatives because I believe in lifting others up.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Experience Section -->
<section class="about-experience" data-section-id="{{ section.id }}" data-section-type="about-experience">
  <div class="about-experience__inner">
    <h2 class="about-experience__heading">My Expertise</h2>
    
    <div class="expertise-grid">
      <div class="expertise-item">
        <h3 class="expertise-item__title">Wedding Photography</h3>
        <p class="expertise-item__description">Capturing the love, joy, and emotion of your special day with cinematic storytelling.</p>
      </div>

      <div class="expertise-item">
        <h3 class="expertise-item__title">Portrait Photography</h3>
        <p class="expertise-item__description">Professional headshots and personal portraits that showcase your authentic self.</p>
      </div>

      <div class="expertise-item">
        <h3 class="expertise-item__title">Event Coverage</h3>
        <p class="expertise-item__description">Comprehensive documentation of your corporate events, celebrations, and milestones.</p>
      </div>

      <div class="expertise-item">
        <h3 class="expertise-item__title">Brand Identity</h3>
        <p class="expertise-item__description">Complete branding solutions from logo design to visual identity systems.</p>
      </div>

      <div class="expertise-item">
        <h3 class="expertise-item__title">Digital Design</h3>
        <p class="expertise-item__description">Modern, creative digital solutions that elevate your online presence.</p>
      </div>

      <div class="expertise-item">
        <h3 class="expertise-item__title">Creative Direction</h3>
        <p class="expertise-item__description">Strategic guidance for visual projects that align with your brand vision.</p>
      </div>
    </div>
  </div>
</section>

<!-- Mission CTA Section -->
<section class="about-cta" data-section-id="{{ section.id }}" data-section-type="about-cta">
  <div class="about-cta__inner">
    <h2 class="about-cta__title">
      Ready to start your creative journey?
    </h2>
    <p class="about-cta__description">
      Let's work together to bring your vision to life. Whether you're looking for photography, branding, or design services, I'm here to help.
    </p>
    <div class="about-cta__buttons">
      <a href="/pages/services" class="button button--primary">View My Services</a>
      <a href="/pages/contact" class="button button--secondary">Get In Touch</a>
    </div>
  </div>
</section>

<style>
  .about-hero {
    margin-top: 80px;
    padding: 5rem 2rem 3rem;
    text-align: center;
    background: radial-gradient(ellipse at center, var(--color-base-primary) 0%, var(--color-base-background) 70%);
    min-height: 350px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-hero__inner {
    max-width: 900px;
  }

  .about-hero__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
  }

  .about-hero__text--accent {
    color: var(--color-base-primary);
  }

  .about-hero__subtitle {
    font-size: 1.2rem;
    color: #E5E0E0;
    margin-bottom: 0;
  }

  .about-story {
    padding: 5rem 2rem;
    background: #000;
  }

  .about-story__inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .about-story__heading {
    font-size: 2rem;
    color: #fff;
    margin-bottom: 1.5rem;
  }

  .about-story__text {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #E5E0E0;
    margin-bottom: 1.5rem;
  }

  .about-story__text:last-child {
    margin-bottom: 0;
  }

  .values-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .value-card {
    background: #1a1a1a;
    border: 2px solid var(--color-base-primary);
    border-radius: 10px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s;
  }

  .value-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(186, 6, 6, 0.3);
  }

  .value-card__icon {
    font-size: 2.5rem;
    color: var(--color-base-primary);
    margin-bottom: 1rem;
  }

  .value-card__title {
    font-size: 1.3rem;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .value-card__description {
    font-size: 0.95rem;
    color: #E5E0E0;
    line-height: 1.6;
  }

  .about-experience {
    padding: 5rem 2rem;
    background: #0a0a0a;
  }

  .about-experience__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .about-experience__heading {
    font-size: 2.25rem;
    text-align: center;
    color: #fff;
    margin-bottom: 3rem;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .expertise-item {
    background: #1a1a1a;
    border-left: 4px solid var(--color-base-primary);
    padding: 2rem;
    border-radius: 5px;
    transition: all 0.3s;
  }

  .expertise-item:hover {
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(186, 6, 6, 0.2);
  }

  .expertise-item__title {
    font-size: 1.2rem;
    color: var(--color-base-primary);
    margin-bottom: 0.5rem;
  }

  .expertise-item__description {
    font-size: 0.95rem;
    color: #E5E0E0;
    line-height: 1.6;
  }

  .about-cta {
    padding: 5rem 2rem;
    text-align: center;
    background: #000;
    border-top: 2px solid var(--color-base-primary);
  }

  .about-cta__inner {
    max-width: 900px;
    margin: 0 auto;
  }

  .about-cta__title {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: 1rem;
  }

  .about-cta__description {
    font-size: 1.1rem;
    color: #E5E0E0;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .about-cta__buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .button {
    display: inline-block;
    padding: 0.8rem 1.8rem;
    background: var(--color-base-primary);
    color: #fff;
    border: 2px solid var(--color-base-primary);
    border-radius: 5px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s;
    cursor: pointer;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .button:hover {
    background: #8B0000;
    border-color: #8B0000;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(186, 6, 6, 0.4);
  }

  .button--secondary {
    background: transparent;
    color: var(--color-base-primary);
  }

  .button--secondary:hover {
    background: var(--color-base-primary);
    color: #fff;
  }

  @media (max-width: 768px) {
    .about-hero {
      margin-top: 60px;
      padding: 3rem 1.5rem;
      min-height: 250px;
    }

    .about-hero__title {
      font-size: 2rem;
    }

    .about-story__inner {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 3rem 1.5rem;
    }

    .about-experience {
      padding: 3rem 1.5rem;
    }

    .expertise-grid {
      grid-template-columns: 1fr;
    }

    .about-cta {
      padding: 3rem 1.5rem;
    }

    .about-cta__title {
      font-size: 1.75rem;
    }

    .about-cta__buttons {
      flex-direction: column;
    }

    .button {
      width: 100%;
    }
  }
</style>
